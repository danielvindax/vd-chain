{
  "dashboard": {
    "title": "Logs Overview",
    "tags": ["logs", "loki"],
    "timezone": "browser",
    "schemaVersion": 27,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Error Logs",
        "type": "logs",
        "targets": [
          {
            "expr": "{level=\"error\"}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 0},
        "options": {
          "dedupStrategy": "none",
          "enableLogDetails": true,
          "prettifyLogMessage": false,
          "showCommonLabels": false,
          "showLabels": false,
          "showTime": true,
          "sortOrder": "Descending"
        }
      },
      {
        "id": 2,
        "title": "Request Logs",
        "type": "logs",
        "targets": [
          {
            "expr": "{service=~\"comlink|socks\"} |~ \"requestLogger\"",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 10, "w": 24, "x": 0, "y": 10},
        "options": {
          "dedupStrategy": "none",
          "enableLogDetails": true,
          "prettifyLogMessage": false,
          "showCommonLabels": false,
          "showLabels": false,
          "showTime": true,
          "sortOrder": "Descending"
        }
      },
      {
        "id": 3,
        "title": "Database Logs",
        "type": "logs",
        "targets": [
          {
            "expr": "{service=~\"postgres|postgres_exporter\"}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20},
        "options": {
          "dedupStrategy": "none",
          "enableLogDetails": true,
          "prettifyLogMessage": false,
          "showCommonLabels": false,
          "showLabels": false,
          "showTime": true,
          "sortOrder": "Descending"
        }
      },
      {
        "id": 4,
        "title": "Service Logs by Service",
        "type": "logs",
        "targets": [
          {
            "expr": "{service=~\"ender|comlink|socks|roundtable|vulcan\"}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20},
        "options": {
          "dedupStrategy": "none",
          "enableLogDetails": true,
          "prettifyLogMessage": false,
          "showCommonLabels": false,
          "showLabels": false,
          "showTime": true,
          "sortOrder": "Descending"
        }
      },
      {
        "id": 5,
        "title": "Log Volume by Service",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(count_over_time({env=\"local\"}[1m])) by (service)",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 28},
        "yaxes": [
          {
            "format": "short",
            "label": "Logs/min"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 6,
        "title": "Error Rate by Service",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(count_over_time({level=\"error\", env=\"local\"}[1m])) by (service)",
            "legendFormat": "{{service}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 28},
        "yaxes": [
          {
            "format": "short",
            "label": "Errors/min"
          },
          {
            "format": "short"
          }
        ]
      }
    ]
  }
}

